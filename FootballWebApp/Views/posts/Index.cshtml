@model IEnumerable<FootballWebApp.Models.post>

@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Posts Panel</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.post_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.post_content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.post_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.post_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.post_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updated_at)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.post_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.post_content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.post_image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.post_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.post_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.updated_at)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id }) 
        </td>
    </tr>
}

</table>
