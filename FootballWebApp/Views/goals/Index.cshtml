@model IEnumerable<FootballWebApp.Models.goal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.match.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.player.fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.team.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.team_scored_against_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.match.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.player.fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.team.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.team_scored_against_id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.goal_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.goal_id }) |
