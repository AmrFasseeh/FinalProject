@model IEnumerable<FootballWebApp.Models.goal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.match.match_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.player.fullname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.match.match_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.player.fullname)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.goal_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.goal_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.goal_id })
            </td>
        </tr>
    }

</table>
