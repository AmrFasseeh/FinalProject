        <p>Team : @ViewBag.team_name</p>
        <input value="@ViewBag.team_id" type="hidden" name="team_id"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.fullname, htmlAttributes: new { @class = "control-label col-md-2" })
